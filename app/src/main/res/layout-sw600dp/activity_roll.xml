<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="35sp"
    android:text="RESULT:"
    android:id="@+id/textView2"
    android:layout_gravity="center_horizontal"
    android:textAlignment="center"
    android:paddingTop="30sp"
    android:layout_centerHorizontal="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="35sp"

    android:text="Do 20 Pushups now or else you will never get strong and be able to pick things up and put them down"
    android:id="@+id/roll_choice"
    android:gravity="center"
    android:layout_centerVertical="true"
    android:paddingBottom="30dp"
    android:layout_centerHorizontal="true"
    android:textColor="#D32F2F"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Done"
    android:textSize="35sp"
    android:id="@+id/complete_button"
    android:layout_gravity="center_horizontal"
    android:layout_above="@+id/incomplete_button"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="30dp"

    android:padding="20dp"
    android:background="@drawable/button_custom"
    android:textColor="#EEEEEE"/>


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Couldn&apos;t Do"
    android:textSize="35sp"
    android:id="@+id/incomplete_button"
    android:layout_gravity="center_horizontal"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="50dp"

    android:padding="20dp"
    android:background="@drawable/button_custom"
    android:textColor="#EEEEEE"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/share_button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:padding="20dp"/>

</RelativeLayout>